<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/answer_edittext"
        android:layout_weight="0.79" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:orientation="horizontal">

        <Switch
            android:layout_width="165dp"
            android:layout_height="match_parent"
            android:textSize="20dp" />

        <Button
            android:id="@+id/factorial"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@color/notNumberColor"
            android:text="x!"
            android:textSize="20dp" />


        <Button
            android:id="@+id/left_paren"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@color/notNumberColor"
            android:layout_marginLeft="4dp"
            android:text="("
            android:textSize="20dp" />


        <Button
            android:id="@+id/right_paren"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@color/notNumberColor"
            android:layout_marginLeft="4dp"
            android:text=")"
            android:textSize="20dp" />


        <Button
            android:id="@+id/percent"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:background="@color/notNumberColor"
            android:text="%"
            android:textSize="20dp" />


        <Button
            android:id="@+id/clear_btn"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@color/notNumberColor"
            android:layout_marginLeft="4dp"
            android:text="AC"
            android:textSize="20dp" />


    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/inverse_btn"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/notNumberColor"
            android:text="inv"
            android:textSize="20dp" />


        <Button
            android:id="@+id/sin_btn"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/notNumberColor"
            android:text="sin"
            android:textSize="20dp" />


        <Button
            android:id="@+id/ln_btn"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/notNumberColor"
            android:text="ln"
            android:textSize="20dp" />


        <Button
            android:id="@+id/num7"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/dipset"
            android:text="7"
            android:textSize="20dp" />

        <Button
            android:id="@+id/num8"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/dipset"
            android:text="8"
            android:textSize="20dp" />


        <Button
            android:id="@+id/num9"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/dipset"
            android:text="9"
            android:textSize="20dp" />


        <Button
            android:id="@+id/division_button"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/notNumberColor"
            android:text="/"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:orientation="horizontal">

        <Button
            android:id="@+id/pi_btn"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/notNumberColor"
            android:text="pi"
            android:textSize="20dp" />

        <Button
            android:id="@+id/cos_btn"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/notNumberColor"
            android:text="cos"
            android:textSize="20dp" />

        <Button
            android:id="@+id/log_btn"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/notNumberColor"
            android:text="log"
            android:textSize="20dp" />

        <Button
            android:id="@+id/num4"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/dipset"
            android:text="4"
            android:textSize="20dp" />


        <Button
            android:id="@+id/num5"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/dipset"
            android:text="5"
            android:textSize="20dp" />


        <Button
            android:id="@+id/num6"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/dipset"
            android:text="6"
            android:textSize="20dp" />


        <Button
            android:id="@+id/multiply"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/notNumberColor"
            android:text="x"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:orientation="horizontal">

        <Button
            android:id="@+id/e_btn"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/notNumberColor"
            android:text="e"
            android:textSize="20dp" />

        <Button
            android:id="@+id/tan_btn"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/notNumberColor"
            android:text="tan"
            android:textSize="20dp" />

        <Button
            android:id="@+id/sq_root"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/notNumberColor"
            android:text="check"
            android:textSize="20dp" />

        <Button
            android:id="@+id/num3"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/dipset"
            android:text="3"
            android:textSize="20dp" />


        <Button
            android:id="@+id/num2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/dipset"
            android:text="2"
            android:textSize="20dp" />


        <Button
            android:id="@+id/num1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/dipset"
            android:text="1"
            android:textSize="20dp" />


        <Button
            android:id="@+id/minus"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/notNumberColor"
            android:text="-"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ans_btn"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/notNumberColor"
            android:text="ans"
            android:textSize="20dp" />

        <Button
            android:id="@+id/exp_btn"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/notNumberColor"
            android:text="exp"
            android:textSize="20dp" />

        <Button
            android:id="@+id/exponent"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/notNumberColor"
            android:text="xy"
            android:textSize="20dp" />

        <Button
            android:id="@+id/period"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/dipset"
            android:text="."
            android:textSize="20dp" />


        <Button
            android:id="@+id/num0"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/dipset"
            android:text="0"
            android:textSize="20dp" />


        <Button
            android:id="@+id/equals"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/dipset"
            android:text="="
            android:textSize="20dp" />


        <Button
            android:id="@+id/addition"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/notNumberColor"
            android:text="+"
            android:textSize="20dp" />

    </LinearLayout>


</LinearLayout>